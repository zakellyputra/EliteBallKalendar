// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  accessToken   String?
  refreshToken  String?
  tokenExpiry   DateTime?
  createdAt     DateTime  @default(now())

  settings       Settings?
  goals          Goal[]
  focusBlocks    FocusBlock[]
  rescheduleLogs RescheduleLog[]
}

model Settings {
  id                 String @id @default(cuid())
  userId             String @unique
  user               User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  workingWindow      String // JSON string
  blockLengthMinutes Int    @default(30)
  timezone           String @default("America/New_York")
  minGapMinutes      Int    @default(5)
}

model Goal {
  id                   String       @id @default(cuid())
  userId               String
  user                 User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  name                 String
  targetMinutesPerWeek Int
  createdAt            DateTime     @default(now())
  focusBlocks          FocusBlock[]
}

model FocusBlock {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  goalId          String
  goal            Goal     @relation(fields: [goalId], references: [id], onDelete: Cascade)
  start           DateTime
  end             DateTime
  calendarEventId String?
  status          String   @default("scheduled") // scheduled, moved, completed, skipped
  createdAt       DateTime @default(now())
}

model RescheduleLog {
  id               String   @id @default(cuid())
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  timestamp        DateTime @default(now())
  reason           String
  blocksMovedCount Int
  minutesRecovered Int      @default(0)
  rawContextChars  Int
  compressedChars  Int
}
